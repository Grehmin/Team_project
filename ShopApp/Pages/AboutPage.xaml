<Page x:Class="ShopApp.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutPage" Background="#755C48">

    <!-- Основной контейнер с выравниванием по центру -->
    <Border Margin="200,0" Background="#f5f5dc">
        <StackPanel Margin="200,50,200,50">
            <Button x:Name="BackButton" Style="{DynamicResource RoundButtonStyle}" Content="{DynamicResource Page_About_button_Back}" Click="BackButton_Click" Background="#4C2F27" HorizontalAlignment="Left" Height="30" Width="31" Foreground="White" BorderThickness="0"/>
            <!-- Информация о программе -->
            <TextBlock Text="{DynamicResource Page_About_TextBlock_About}" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" RenderTransformOrigin="0.5,-1.247" HorizontalAlignment="Center"/>
            <TextBlock Text="{DynamicResource Page_About_TextBlock_AboutDescription}" 
                       TextWrapping="Wrap" 
                       HorizontalAlignment="Center" 
                       TextAlignment="Center" 
                       Margin="0,0,0,20"/>
            <TextBlock Text="{DynamicResource Page_About_TextBlock_Version}" FontStyle="Italic" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="{DynamicResource Page_About_TextBlock_ApplicationDevelopers}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

            <!-- Информация о разработчиках -->
            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                <!-- дописать необходимую информацию-->
                <TextBlock Text="Сергей - TeamLead" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Даниил - Lead App Developer" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Алексей - App Developer, Database Architect" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="{DynamicResource Page_About_TextBlock_AddAnother}" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            </StackPanel>
        </StackPanel>
        <!-- Изображение -->
        <Image 
            Source="pack://application:,,,/Assets/college-logo.jpg" 
            Width="108" 
            Height="120" 
            HorizontalAlignment="Right" 
            VerticalAlignment="Top"
            Margin="0,0,20,0" />
    </Border>
</Page>
