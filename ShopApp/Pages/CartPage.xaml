<Page x:Class="ShopApp.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Cart" Loaded="Page_Loaded">
    <Page.Resources>
        <Style TargetType="ListView">
            
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Height="40" Background="#755C48">
            <Grid Margin="5,3,5,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="ItemBrowserButton" Style="{DynamicResource RoundSquareButton}" Width="37" Background="#f5f5dc" BorderThickness="0" Foreground="#4C2F27" Content="Back" Click="ItemBrowserButton_Click"/>
                <Button Grid.Column="2" x:Name="ProfileButton" Style="{DynamicResource RoundButtonStyle}" Width="36" Margin="5,0,5,0" BorderThickness="0" Background="#f5f5dc" Foreground="#4C2F27" Content="Profile" Click="ProfileButton_Click"/>

            </Grid>
        </Border>
        <ListView x:Name="CartItemsView" Grid.Row="1" ItemsSource="{Binding CartItems}" Background="#f5f5dc">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Product" Width="200" DisplayMemberBinding="{Binding Product.ProductName}"/>
                    <GridViewColumn Header="Price" Width="100" DisplayMemberBinding="{Binding Product.Price, StringFormat={}{0:C2}}"/>
                    <GridViewColumn Header="Quantity" Width="100" DisplayMemberBinding="{Binding Quantity}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
