<Page x:Class="ShopApp.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Cart" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" x:Name="ItemBrowserButton" Content="Item Browser" Click="ItemBrowserButton_Click"/>
                <Button Grid.Column="2" x:Name="ProfileButton" Content="Profile" Click="ProfileButton_Click"/>

            </Grid>
        </Border>
        <ListView x:Name="CartItemsView" Grid.Row="1" ItemsSource="{Binding CartItems}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Product" Width="200" DisplayMemberBinding="{Binding Product.ProductName}"/>
                    <GridViewColumn Header="Price" Width="100" DisplayMemberBinding="{Binding Product.Price, StringFormat={}{0:C2}}"/>
                    <GridViewColumn Header="Quantity" Width="100" DisplayMemberBinding="{Binding Quantity}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
