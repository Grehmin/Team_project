<Page x:Class="ShopApp.Pages.ItemBrowserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopApp.Pages"
      xmlns:utils="clr-namespace:ShopApp.Utils"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ItemBrowserPage" Loaded="Page_Loaded">

    <Page.Resources>
        <utils:ImagePathConverter x:Key="ImagePathConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Height="30" Background="#757575">
            <Grid Margin="10,3,10,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="AboutButton" Grid.Column="0" Content="About" Click="AboutButton_Click" />
                <Button x:Name="AddNewProductButton" Grid.Column="2" Content="New Product (Admin)" Click="AddNewProductButton_Click" Visibility="Hidden"/>
                <Button x:Name="CartButton" Grid.Column="3" Content="Cart" Click="CartButton_Click" />
                <Button x:Name="ProfileButton" Grid.Column="4" Content="Profile" Click="ProfileButton_Click"/>
            </Grid>
        </Border>
        <!-- Item Display -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <ItemsControl x:Name="ProductsItemsControl" Margin="20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" Margin="10" Padding="15"
                                BorderBrush="#CCCCCC" BorderThickness="1"
                                CornerRadius="5" MouseRightButtonDown="Product_MouseRightButtonDown">
                            <Border.Resources>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#007ACC"/>
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Resources>
                            <StackPanel>
                                <!-- Product Image -->
                                <Image Source="{Binding Image, Converter={StaticResource ImagePathConverter}}" 
                                       Height="150" 
                                       Stretch="Uniform"
                                       Margin="0,0,0,10"/>

                                <!-- Product Name -->
                                <TextBlock Text="{Binding ProductName}" 
                                           FontWeight="Bold"
                                           FontSize="16"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,5"/>

                                <!-- Price & Stock -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Price, StringFormat={}{0:C2}}" 
                                           Foreground="Green"
                                           FontSize="14"
                                           Margin="0,0,0,5"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Quantity, StringFormat='In stock: {0}'}" 
                                           FontSize="12" HorizontalAlignment="Right"/>
                                </Grid>

                                <!-- Description -->
                                <TextBlock Text="{Binding ProductDescription}" 
                                           TextWrapping="Wrap"
                                           Foreground="Gray"
                                           FontSize="12"
                                           Margin="0,0,0,10"/>

                                <!-- Add to Cart Button -->
                                <Button Content="Add to Cart" 
                                        Padding="10,5"
                                        Background="#007ACC"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Click="AddToCart_Click"
                                        Tag="{Binding ProductID}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>


    </Grid>
</Page>
