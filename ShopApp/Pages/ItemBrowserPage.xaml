<Page x:Class="ShopApp.Pages.ItemBrowserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ItemBrowserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Height="30" Background="#757575">
            <Grid Margin="10,3,10,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="AboutButton" Grid.Column="0" Content="About" Click="AboutButton_Click" />
                <Button x:Name="CartButton" Grid.Column="2" Content="Cart" Click="CartButton_Click" />
                <Button x:Name="ProfileButton" Grid.Column="3" Content="Profile" Click="ProfileButton_Click"/>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="1">
            <Grid>
                <TextBlock Text="Example"/>
            </Grid>
        </ScrollViewer>


    </Grid>
</Page>
